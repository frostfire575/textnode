{
  "name": "@textnode/cli",
  "version": "0.2.2",
  "description": "CLI tools for textnode typography system. Initialize projects, analyze fonts, export design tokens to CSS/SCSS/Tailwind/JSON.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "textnode": "./bin/textnode.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "typography",
    "fonts",
    "cli",
    "command-line",
    "font-analysis",
    "design-tokens",
    "css-variables",
    "scss",
    "tailwind",
    "type-scale",
    "font-metrics"
  ],
  "author": "frostfire",
  "license": "MIT",
  "homepage": "https://github.com/frostfire575/textnode#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frostfire575/textnode.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/frostfire575/textnode/issues"
  },
  "dependencies": {
    "@textnode/core": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "inquirer": "^9.2.0",
    "ora": "^8.0.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
