{
  "name": "@textnode/nextjs",
  "version": "0.2.1",
  "description": "Next.js integration for textnode typography system. Font optimization, preloading, App Router support, and zero layout shift.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "typography",
    "fonts",
    "nextjs",
    "next.js",
    "next",
    "type-scale",
    "layout-shift",
    "cls",
    "font-optimization",
    "app-router",
    "server-components"
  ],
  "author": "frostfire",
  "license": "MIT",
  "homepage": "https://github.com/frostfire575/textnode#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frostfire575/textnode.git",
    "directory": "packages/nextjs"
  },
  "bugs": {
    "url": "https://github.com/frostfire575/textnode/issues"
  },
  "dependencies": {
    "@textnode/core": "workspace:*",
    "@textnode/react": "workspace:*"
  },
  "peerDependencies": {
    "next": "^13.0.0 || ^14.0.0 || ^15.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
