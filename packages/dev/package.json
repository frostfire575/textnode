{
  "name": "@textnode/dev",
  "version": "0.2.1",
  "description": "Development tools for textnode. Debug panel, type scale visualizer, CLS monitor, and font loading inspector for React apps.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "typography",
    "fonts",
    "devtools",
    "debug",
    "developer-tools",
    "cls-monitor",
    "layout-shift",
    "type-scale-visualizer",
    "font-inspector",
    "react-devtools"
  ],
  "author": "frostfire",
  "license": "MIT",
  "homepage": "https://github.com/frostfire575/textnode#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frostfire575/textnode.git",
    "directory": "packages/dev"
  },
  "bugs": {
    "url": "https://github.com/frostfire575/textnode/issues"
  },
  "dependencies": {
    "@textnode/core": "workspace:*",
    "@textnode/react": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "jsdom": "^23.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
