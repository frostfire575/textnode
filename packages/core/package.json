{
  "name": "@textnode/core",
  "version": "0.3.0",
  "description": "Complete typography system for the web. Type scales, font management, CSS generation, and zero layout shift - framework agnostic.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "typography",
    "fonts",
    "type-scale",
    "modular-scale",
    "fluid-typography",
    "layout-shift",
    "cls",
    "web-fonts",
    "font-loading",
    "css-generation",
    "fallback-fonts",
    "font-metrics"
  ],
  "author": "frostfire",
  "license": "MIT",
  "homepage": "https://github.com/frostfire575/textnode#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frostfire575/textnode.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/frostfire575/textnode/issues"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
